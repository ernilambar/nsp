{
  "copyFiles": [
    {
      "from": [
        "**",
        "!*.md",
        "!*.dist",
        "!*.json",
        "!*.lock",
        "!*.lockb",
        "!*.yaml",
        "!*.js",
        "!src/**/*",
        "!sass/**/*",
        "!scripts/**/*",
        "!languages/**/*",
        "!node_modules/**/*",
        "!deploy/**/*",
				"!vendor/yahnis-elsts/plugin-update-checker/languages"
      ],
      "to": "deploy/temp/"
    }
  ],
  "copyFilesSettings": {
    "ignoreDotFilesAndFolders": true
  }
}
